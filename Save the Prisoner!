#include<stdio.h>
int savetheprisoner(int n, int m, int s){
    int result = (s-1+m-1)%n + 1;
    return result;
}

int main(){
    int t;
    scanf("%d",&t);
    while(t--){
        int n,m,s;
        scanf("%d %d %d",&n,&m,&s);
        printf("%d\n", savetheprisoner(n,m,s));
        
    }
    return 0;
}
